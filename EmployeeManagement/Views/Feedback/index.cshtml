@model Feedback

@{
    ViewBag.Title = "Feedback";
}

<form enctype="multipart/form-data" asp-action="Index" method="post" class="form" 
     style="background-color:#343a40;border-radius:5px;
     margin-top:50px; align-items:center; color:white">

    <div asp-validation-summary="All" class="text-danger"></div>
     <h2>We want to hear from you!</h2>
    <div class="form-group">
        <label asp-for="Name" class="sr-only"></label>        
        <input asp-for="Name" class="form-control first" placeholder="Name" required autofocus />
        <span asp-validation-for="Name" class="text-danger"></span>        
    </div>

    <div class="form-group">
        <label asp-for="Email" class="sr-only"></label>
        <input asp-for="Email" type="email" class="form-control first" placeholder="Email" required autofocus/>
        <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Message" class="sr-only"></label>
        <textarea asp-for="Message" class="form-control" placeholder="Type your message here"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <div class="checkbox">
            <label asp-for="ContactMe">
                <input type="checkbox">
                @Html.DisplayNameFor(m => m.ContactMe)
            </label>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Send" />
        </div>
    </div>

</form>