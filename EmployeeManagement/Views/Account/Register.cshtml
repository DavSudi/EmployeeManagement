@model RegisterViewModel


@{ 
    ViewBag.Title = " User Registration";
}   

<div class="row">
    <div class="col-md-12">
    <form method="post" class="form" style="background-color:#343a40; margin-top:50px; align-items:center; color:white; border-radius:5px;">
      <div asp-validation-summary="All" class="text-danger"></div>
       <h2 class="form-heading">Please Register</h2>
        <div class="form-group">
            <label asp-for="Email" class="sr-only"></label>
            <input asp-for="Email" type="email" class="form-control first" placeholder="Email" required autofocus />
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="sr-only"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="sr-only"></label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Retype password" required />
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="City" class="sr-only"></label>
            <input asp-for="City" class="form-control last" placeholder="City" />
        </div>
            <button class="btn btn-primary btn-block" type="submit">Register</button>
    </form>       
</div>
</div>                                                                                                   